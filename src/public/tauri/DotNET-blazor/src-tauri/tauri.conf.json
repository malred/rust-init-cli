{
  "build": {
    "beforeDevCommand": "dotnet watch run --project src/TauriApp.csproj",
    "beforeBuildCommand": "dotnet publish -c release src/TauriApp.csproj -o dist",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/wwwroot",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "tauri-app",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "tauri-app",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri-app.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
